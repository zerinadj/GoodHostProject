@model GoodHost.Web.Models.Places.Place
@{
    ViewData["Title"] = "Create Employee";
}
<h2>Host</h2>
<h4>your place</h4>
<hr />
<form asp-action="Create" class="form-horizontal">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Type</label>
        <input asp-for="Kind" class="form-control" />
        <span asp-validation-for="Kind" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Number of guests</label>
        <input asp-for="MaxNum" class="form-control" />
        <span asp-validation-for="MaxOfGuests" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Country</label>
        <input asp-for="RoomType" class="form-control" />
        <span asp-validation-for="Rooms" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Submit" class="btn bg-primary" />

    </div>
</form>
@{
    if (@TempData["Msg"] != null)
    {
        <script>

            alert('@TempData["msg"]')
        </script>

    }
}  